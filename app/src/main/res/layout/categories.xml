<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_marginStart="-300dp"
        android:layout_marginTop="-400dp"
        android:layout_width="600dp"
        android:layout_height="600dp"
        app:srcCompat="@drawable/circle" />


    <TableLayout
        android:id="@+id/table1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="-100dp">
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center">
            <Button
                android:id="@+id/button1"
                android:layout_weight="1"
                style="@style/categoriesButton"
                android:gravity="bottom|center"
                android:paddingBottom="100dp"
                android:text="Animal Rights" />
            <Button
                android:id="@+id/button2"
                android:layout_weight="1"
                style="@style/categoriesButton2"
                android:gravity="bottom|center"
                android:paddingBottom="100dp"
                android:text="Environmental Conservation" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center">

            <Button
                android:id="@+id/button3"
                android:layout_weight="1"
                style="@style/categoriesButton3"
                android:gravity="bottom|center"
                android:paddingBottom="100dp"
                android:text="Health" />
            <Button
                android:id="@+id/button4"
                android:layout_weight="1"
                style="@style/categoriesButton4"
                android:gravity="bottom|center"
                android:paddingBottom="100dp"
                android:text="Education" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center">

            <Button
                android:id="@+id/button5"
                android:layout_weight="1"
                style="@style/categoriesButton5"
                android:gravity="bottom|center"
                android:paddingBottom="100dp"
                android:text="Coming Soon" />
            <Button
                android:id="@+id/button6"
                android:layout_weight="1"
                style="@style/categoriesButton5"
                android:gravity="bottom|center"
                android:paddingBottom="100dp"
                android:text="Coming Soon" />
        </TableRow>

    </TableLayout>


</LinearLayout>